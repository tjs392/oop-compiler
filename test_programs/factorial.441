# recursive factorial calculation

class Factorial [
    fields dummy
    method compute(n) with locals result:
        if (n < 2): {
            return 1
        } else {
            result = ^this.compute((n - 1))
            return (n * result)
        }
]

main with fact, result:
    fact = @Factorial
    result = ^fact.compute(5)
    print(result)